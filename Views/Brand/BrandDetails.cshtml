@model IEnumerable<ECommerce.Models.Brand>
@{
    ViewBag.Title = "BrandDetails";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


<div class="pull-right">
    <a href="AddBrand"><input type="button" class="btn btn-primary" value="Add Brand" /> </a>
</div>
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Brand Details</h3>
    </div>
    <div class="box-content">
        <table id="brand" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Brand Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
               @foreach(var brand in Model)
                {

                    <tr>

                        <td>@brand.Id</td>
                        <td>@(brand.Name)</td>                     
                        <td>@Html.ActionLink("Edit ", "Edit", "Brand", new { id = brand.Id }, new { @class = "btn btn-warning" })</td>                      
                        <td>@Html.ActionLink("Delete", "DeleteBrand", "Brand", new { id = brand.Id }, new { @class = "btn btn-danger" })</td>
                        @* <td><a href="DeleteBrand/@brand.Id" id="delete" class="btn btn-danger">Delete</a> </td>*@
                    </tr>

                }

            </tbody>
        </table>
        </div>
    </div>

@section scripts
            {
