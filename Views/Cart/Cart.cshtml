@model ECommerce.ViewModel.CartLineItemViewModel
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout</h2>


<div class="container">
    <div class="check">
        <div class="col-md-3 cart-total">
            <a class="continue" href="#">Continue to basket</a>
            <div class="price-details">
                @*@do*@
               <h3>Price Details</h3>
                <span>Total</span>
               
                <span class="total1">@Model.cart.TotalAmount</span>
                <span>Discount</span>
                <span class="total1">---</span>
                <span>Delivery Charges</span>
                <span class="total1">150.00</span>
                <div class="clearfix"></div>
                
                            

            </div>
            <ul class="total_price">
                <li class="last_price"> <h4>TOTAL</h4></li>
                <li class="last_price"><span>@Model.cart.TotalQty</span></li>
                <div class="clearfix"> </div>
            </ul>
             
                @*@while();*@

            <div class="clearfix"></div>
            <a class="order" href="#">Place Order</a>
            <div class="total-item">
                <h3>OPTIONS</h3>
                <h5>COUPONS</h5>
                <a class="cpns" href="#">Apply Coupons</a>
                <p><a href="#">Log In</a> to use accounts - linked coupons</p>
            </div>
        </div>
        <div class="col-md-9 cart-items">
            <h1>My Shopping Bag (2)</h1>
            <script>
                $(document).ready(function (c) {
                    $('.close1').on('click', function (c) {
                        $('.cart-header').fadeOut('slow', function (c) {
                            $('.cart-header').remove();
                        });
                    });
                });
            </script>
            <div class="cart-header">
                <div class="close1">

                </div>
                <div class="cart-sec simpleCart_shelfItem">

                    @foreach (var cart in Model.CartLineItem)
                    {
                        <div class="cart-item cyc">
                            <img src="@Url.Content(@cart.product.Image)" class="img-responsive" alt="" />
                        </div>
                        <div class="cart-item-info">
                            <h3><a href="#">@cart.product.Name</a><span>Model No: 3578</span></h3>
                            <ul class="qty">
                                <li><p>Size : 5</p></li>
                                <li><p>@cart.Qty</p></li>
                            </ul>

                            <div class="delivery">
                                <p>Service Charges : Rs.100.00</p>
                                <span>Delivered in 2-3 bussiness days</span>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                    }
                </div> 
                 
              
            </div>
          
        </div>


        <div class="clearfix"> </div>
    </div>
</div>
@section scripts
{
    <script>
        $(document).ready(function (c) {
            $('.close2').on('click', function (c) {
                $('.cart-header2').fadeOut('slow', function (c) {
                    $('.cart-header2').remove();
                });
            });
        });
    </script>
}