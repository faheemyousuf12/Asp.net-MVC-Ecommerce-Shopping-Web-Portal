@model IEnumerable<ECommerce.Models.UOM>

@{
    ViewBag.Title = "UomDetails";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


<div class="pull-right">
    <a href="AddUom"><input type="button" class="btn btn-primary" value="Add UOM" /> </a>
</div>
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Appointment Details</h3>
    </div>
    <div class="box-content">

        <table id="uom" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Unit of measurement</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var uom in Model)
                {

                    <tr>

                        <td>@uom.Id</td>
                        <td>@Html.ActionLink(uom.Name, "", "Uom", new { id = uom.Id }, null)</td>

                        <td>@Html.ActionLink("Delete", "DeleteUom", "Brand", new { id = uom.Id }, null)</td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>
@section scripts
            {
    <script>
        $(document).ready(function () {
            var table = $("#uom").DataTable({
            });
        });
    </script>
}


