@model ECommerce.ViewModel.ProductViewModel

@{
    ViewBag.Title = "CreateProduct";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>CreateProduct</h2>
 @using (Html.BeginForm("SaveProduct", "Product", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true, "Please fix the following Errors.")
        <div class="col-md-12">
        <div class="col-md-4 form-group">
            <label>Name</label>
            @Html.TextBoxFor(p => p.Product.Name, new { @class = "form-control" })
        </div>
            <div class="col-md-4 form-group">
                <label>Brand</label>
                @Html.DropDownListFor(p => p.Product.BrandId, new SelectList(Model.Brand, "Id", "Name"), "Select Brand", new { @class = "form-control" })
            </div>
            <div class="col-md-4 form-group">
                <label>Category</label>
                @Html.DropDownListFor(p => p.Product.ChildCategoryId, new SelectList(Model.ChildCategory, "Id", "Name"), "Select Category", new { @class = "form-control" })
            </div>
            <div class="col-md-4 form-group">
                <label>UOM</label>
                @Html.DropDownListFor(p => p.Product.UomId, new SelectList(Model.UOM, "Id", "Name"), "Select UOM", new { @class = "form-control" })
            </div>
            <div class="col-md-4 form-group">
                <label>Size</label>
                @Html.DropDownListFor(p => p.Product.SizeId, new SelectList(Model.Size, "Id", "Name"), "Select Size", new { @class = "form-control" })
            </div>
            <div class="col-md-4 form-group">
                <label>Price</label>
                @Html.TextBoxFor(p => p.Product.Price, new { @class = "form-control" })
            </div>
            <div class="col-md-4 form-group">
                <label>Qty</label>
                @Html.TextBoxFor(p => p.Product.Qty, new { @class = "form-control" })
            </div>
        <div class="col-md-4 form-group" >
            <label>Review</label>
            @Html.TextBoxFor(p => p.Product.Reveiws, new { @class = "form-control" })
        </div>
            <div class="col-md-4 form-group">
                <label>Description</label>
                @Html.TextBoxFor(p => p.Product.Description, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(p => p.Product.Image, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="image" value="submit" class="btn btn-default" />
                </div>
            </div>
        <div class="col-md-6">
            <input type="button" class="btn btn-default" value="Cancel" />
            <input type="submit" class="btn btn-primary" value="Add Product" />
        </div>
    </div>

    @Html.AntiForgeryToken()

}
