@model  ECommerce.ViewModel.CategoryViewModel

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>AddCategory</h2>


@using (Html.BeginForm("SaveCategory", "Category"))
{
    @Html.ValidationSummary(true, "Please fix the following Errors.")
    <div class="col-md-12">
        <div class="col-md-4 form-group">
            <label>Parent Category</label>
            @Html.DropDownListFor(c => c.ChildCategory.ParentCategoryId, new SelectList(Model.ParentCategory, "Id", "Name"), "Select Parent Category", new { @class = "form-control" })
        </div>

        <div class="col-md-4 form-group">
            <label>Name</label>
            @Html.TextBoxFor(c => c.ChildCategory.Name, new { @class = "form-control" })
        </div>
        <div class="col-md-6">
            <input type="button" class="btn btn-default" value="Cancel" />
            <input type="submit" class="btn btn-primary" value="Add Appointment" />
        </div>
    </div>

    @Html.AntiForgeryToken()

}


