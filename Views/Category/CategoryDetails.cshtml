@model IEnumerable<ECommerce.Models.ChildCategory>

@{
    ViewBag.Title = "CategoryDetails";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>CategoryDetails</h2>

<div class="pull-right">
    <a href="AddCategory"><input type="button" class="btn btn-primary" value="Add Category" /> </a>
</div>
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Category Details</h3>
    </div>
    <div class="box-content">
        <table id="category" class="table table-striped table-bordered bootstrap-datatable datatable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>C Id</th>
                    <th>Parent Category</th>
                    <th>Category</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {

                    <tr>
                        <td></td>
                        <td>@category.Id</td>
                        <td>@(category.ParentCategory.Name)</td>
                        <td>@(category.Name)</td>   
                        <td>@Html.ActionLink("Edit ", "EditCustomer", "Customer", new { id = category.Id }, new { @class = "btn btn-warning" })</td>
                    
                        <td>@Html.ActionLink("Delete", "DeleteCategory", "Category", new { id = category.Id }, new { @class = "btn btn-danger" })</td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>
